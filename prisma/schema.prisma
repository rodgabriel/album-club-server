generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int          @id @default(autoincrement())
  name     String
  username String       @unique
  password String
  clubs    ClubToUser[]
}

model Club {
  id      Int          @id @default(autoincrement())
  name    String       @unique
  members ClubToUser[]
}

model ClubToUser {
  userId Int
  clubId Int
  club   Club @relation(fields: [clubId], references: [id])
  user   User @relation(fields: [userId], references: [id])

  @@id([userId, clubId])
}
